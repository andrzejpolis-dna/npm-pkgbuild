{
  "name": "myservice",
  "description": "a description",
  "version": "1.2.3-semantic-release",
  "xrepository": {
    "type": "git",
    "url": "https://github.com/arlac77/myservice.git"
  },
  "engines": {
    "node": ">=10.5"
  },
  "config" : {
    "port" : 8088,
    "api" : {
      "url" : "http://somwhere.com/prefix/api"
    }
  },
  "pkgbuild": {
    "installdir": "/services/${name}",
    "groups": "webhook",
    "depends": {
      "redis": ">=5.0.3"
    },
    "hooks": "pkgbuild/pacman.install",
    "includeNpmPack" : true,
    "includeNodeModules" : true,
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pkgbuild/tmpfiles.conf"
    }
  }
}
