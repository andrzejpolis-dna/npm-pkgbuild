{
  "name": "myservice",
  "description": "a description",
  "version": "1.2.3-semantic-release",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/myservice.git"
  },
  "engines": {
    "node": ">=10.5"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h"
    ],
    "installdir": "/services/${name}",
    "groups": "webhook",
    "backup": [
      "etc/${name}/${name}.json"
    ],
    "depends": {
      "redis": ">=5.0.3-7",
      "systemd": ">=241"
    },
    "install": "pacman/pacman.install",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "${installdir}/docroot1/": "content/**/*.txt",
      "${installdir}/docroot2/": {
        "base": "content",
        "pattern": "**/*.json"
      }
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
