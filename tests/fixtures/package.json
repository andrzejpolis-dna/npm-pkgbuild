{
  "name": "myservice",
  "description": "a description",
  "version": "1.2.3-semantic-release",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/myservice.git"
  },
  "engines": {
    "node": ">=10.5"
  },
  "config": {
    "port": 8088,
    "api": {
      "url": "http://somwhere.com/prefix/api"
    },
    "serviceURL": "/services/${name}",
    "urlPrefix": "/services/${name}/api"
  },
  "pkgbuild": {
    "properties": {
      "installdir": "/services/${name}"
    },
    "arch": [
      "aarch64",
      "armv7h"
    ],
    "groups": "webhook",
    "backup": [
      "etc/${name}/${name}.json"
    ],
    "depends": {
      "redis": ">=5.0.3-7",
      "systemd": ">=241"
    },
    "hooks": "pkgbuild/pacman.install",
    "content": {
      "${installdir}": {
        "npm": [
          "dist",
          "dependencies"
        ]
      },
      "/usr/lib/systemd/system": {
        "base": "systemd",
        "pattern": "**/*.json"
      },
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "${installdir}/docroot1": "content/**/*.txt",
      "${installdir}/docroot2": {
        "base": "content",
        "pattern": "**/*.json"
      },
      "/etc/${name}": "config"
    }
  },
  "dependencies": {
    "mf-hosting": "github:arlac77/mf-hosting"
  }
}
