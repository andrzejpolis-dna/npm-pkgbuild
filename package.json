{
  "name": "npm-pkgbuild",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/pkgbuild.mjs",
  "module": "src/pkgbuild.mjs",
  "description": "create ArchLinux packages from npm packages",
  "keywords": [
    "aur",
    "pkgbuild",
    "pacman",
    "arch-linux",
    "ArchLinux"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-pkgbuild": "src/npm-pkgbuild-cli.mjs"
  },
  "scripts": {
    "prepare": "rollup -c",
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/pkgbuild.mjs --section=API",
    "lint": "documentation lint src/pkgbuild.mjs"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "execa": "^4.0.0",
    "expression-expander": "^7.0.4",
    "globby": "^11.0.0",
    "iterable-string-interceptor": "^1.0.5",
    "npm-packlist": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "stream-buffers": "^3.0.2"
  },
  "engines": {
    "node": ">=13.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-pkgbuild.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-pkgbuild/issues"
  },
  "homepage": "https://github.com/arlac77/npm-pkgbuild#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-arlac77-github"
    ]
  }
}
